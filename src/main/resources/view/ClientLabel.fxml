<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox id="clientLabel" fx:id="clientLabel" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
      <VBox minHeight="105.0">
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
         <children>
            <HBox alignment="CENTER" minHeight="75.0">
               <children>
                  <HBox spacing="5.0">
                     <children>
                            <Label fx:id="id" styleClass="cell_big_label">
                                <minWidth>
                                    <!-- Ensures that the label text is never truncated -->
                                    <Region fx:constant="USE_PREF_SIZE" />
                                </minWidth>
                           <font>
                              <Font size="16.0" />
                           </font>
                            </Label>
                            <Label fx:id="name" styleClass="cell_big_label" text="\$first">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font></Label>
                     </children>
                  </HBox>
                  <StackPane HBox.hgrow="ALWAYS" />
                    <VBox alignment="TOP_RIGHT">
                        <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" textAlignment="RIGHT" />
                        <Label fx:id="address" styleClass="cell_small_label" text="\$address" textAlignment="RIGHT" />
                        <Label fx:id="email" styleClass="cell_small_label" text="\$email" textAlignment="RIGHT" />
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                    </VBox>
               </children>
            </HBox>
            <Label text="Subscriptions">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="30.0" />
         </padding>
      </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</HBox>
